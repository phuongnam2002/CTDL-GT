template<class X,class Y>
    void minimize(X &x,const Y &y) {
        if (x>y) x=y;
    }
template<class X,class Y>
    void maximize(X &x,const Y &y) {
        if (x<y) x=y;
    }
template<class T>
    T Abs(const T &x) {
        return (x<0?-x:x);
    }
void xuly()
{
   int n;
   ll x;
   cin>>n>>x;
   ll a[n];
   f0(i,n) cin>>a[i];
   a[-1]=-1;
   int p=upper_bound(a,a+n,x)-a;
   if(a[p-1]<=x&&a[p-1]>=0) cout<<p<<'\n';
   else cout<<-1<<'\n';
}
int main()
{
  ios::sync_with_stdio(false);cin.tie(0);cout.tie(0);
  int t=1;
  cin>>t;
  while(t--) xuly();
}
