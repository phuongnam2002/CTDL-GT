using namespace std;
typedef long long ll;
const int N=1e6+3;
const int MOD=1000007;
template<class X,class Y>
    void minimize(X &x,const Y &y) {
        if (x>y) x=y;
    }
template<class X,class Y>
    void maximize(X &x,const Y &y) {
        if (x<y) x=y;
    }
template<class T>
    T Abs(const T &x) {
        return (x<0?-x:x);
    }
int n;
void xuly()
{
   set<int>s;
   cin>>n;
   int ma=0,mi=1e9;
   f1(i,n)
   {
       int x;
       cin>>x;
       maximize(ma,x);
       minimize(mi,x);
       s.insert(x);
   }
   cout<<ma-mi+1-s.size()<<'\n';
}
int main()
{
  ios::sync_with_stdio(false);cin.tie(0);cout.tie(0);
  int t;
  cin>>t;
  while(t--) xuly();
}
