#define all(s) s.begin(),s.end()
using namespace std;
typedef long long ll;
const int N=1e6+3;
const int MOD=1e9+7;
int n,k;
ll f[N],g[N];
void xuly()
{
    cin>>n>>k;
    g[-1]=f[0]=0;
    g[0]=1;
    g[1]=2;
    f1(i,n)
    {
        f[i]=(g[i-1]-g[max(-1,i-k-1)]+MOD)%MOD;
        g[i]=(g[i-1]+f[i])%MOD;
    }
    cout<<f[n];el;
}
int main()
{
  ios::sync_with_stdio(false);cin.tie(0);cout.tie(0);
  int t=1;
  cin>>t;
  while(t--) xuly();
  return 0;
}
